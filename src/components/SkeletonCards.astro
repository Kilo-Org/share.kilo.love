---
export interface Props {
  count?: number;
}

const { count = 3 } = Astro.props;
---

<div class="mx-auto max-w-7xl px-6 lg:px-8">
  <div class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
    {Array.from({ length: count }).map((_, index) => (
      <article class="flex flex-col items-start justify-between animate-pulse">
        <div class="relative w-full">
          <!-- Skeleton image -->
          <div class="aspect-video w-full rounded-2xl bg-gray-200 sm:aspect-[2/1] lg:aspect-[3/2]"></div>
          <div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
        </div>
        
        <div class="flex max-w-xl grow flex-col justify-between w-full">
          <div class="mt-8 flex items-center gap-x-4 text-xs">
            <!-- Skeleton date -->
            <div class="h-4 bg-gray-200 rounded w-20"></div>
            <!-- Skeleton label -->
            <div class="h-6 bg-gray-200 rounded-full w-16 px-3 py-1.5"></div>
          </div>
          
          <div class="group relative grow">
            <!-- Skeleton title -->
            <div class="mt-3 space-y-2">
              <div class="h-6 bg-gray-200 rounded w-full"></div>
              <div class="h-6 bg-gray-200 rounded w-3/4"></div>
            </div>
            
            <!-- Skeleton description -->
            <div class="mt-5 space-y-2">
              <div class="h-4 bg-gray-200 rounded w-full"></div>
              <div class="h-4 bg-gray-200 rounded w-full"></div>
              <div class="h-4 bg-gray-200 rounded w-2/3"></div>
            </div>
          </div>
          
          <div class="relative mt-8 flex items-center gap-x-4">
            <!-- Skeleton avatar -->
            <div class="size-10 rounded-full bg-gray-200"></div>
            <div class="text-sm/6 space-y-1">
              <!-- Skeleton author name -->
              <div class="h-4 bg-gray-200 rounded w-24"></div>
              <!-- Skeleton metadata -->
              <div class="h-4 bg-gray-200 rounded w-32"></div>
            </div>
          </div>
        </div>
      </article>
    ))}
  </div>
</div>

<style>
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }
  
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>